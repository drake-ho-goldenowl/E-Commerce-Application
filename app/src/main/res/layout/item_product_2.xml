<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_sample_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="11dp"
                android:text="Pullover"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/imgProduct"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtBrandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="4dp"
                android:text="Mango"
                android:textColor="@color/grey3"
                android:textSize="11sp"
                app:layout_constraintLeft_toRightOf="@id/imgProduct"
                app:layout_constraintTop_toBottomOf="@id/txtName" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="6dp"
                android:numStars="5"
                android:progressTint="@color/yellow"
                android:rating="5"
                app:layout_constraintLeft_toRightOf="@id/imgProduct"
                app:layout_constraintTop_toBottomOf="@id/txtBrandName" />

            <TextView
                android:id="@+id/txtNumberVote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2.5dp"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="(10)"
                android:textColor="@color/grey3"
                android:textSize="11sp"
                app:layout_constraintLeft_toRightOf="@id/ratingBar"
                app:layout_constraintTop_toBottomOf="@id/txtBrandName" />

            <TextView
                android:id="@+id/txtOldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:text="51$"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/imgProduct"
                app:layout_constraintTop_toBottomOf="@id/ratingBar" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <CheckBox
        android:id="@+id/checkboxFavorite"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="-10dp"
        android:background="@drawable/checkbox_selector"
        android:button="@null"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardViewProduct"
        app:layout_constraintRight_toRightOf="@+id/cardViewProduct" />


</androidx.constraintlayout.widget.ConstraintLayout>