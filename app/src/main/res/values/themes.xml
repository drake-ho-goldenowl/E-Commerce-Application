<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ECommerceApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:textViewStyle">@font/metropolis</item>
        <item name="fontFamily">@font/metropolis</item>

        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>

        <item name="windowNoTitle">true</item>
        <!--        <item name="windowActionBar">false</item>-->
        <item name="textAppearanceHeadline4">@style/TextAppearance.App.Headline4</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>

    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ic_app_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_app</item>
        <item name="postSplashScreenTheme">@style/Theme.ECommerceApp</item>
    </style>


    <!--    Bottom Layout Theme-->
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>


    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <!--    Appbar-->
    <style name="TextAppearance.App.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/metropolis_black</item>
        <item name="android:fontFamily">@font/metropolis_black</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/metropolis_semibold</item>
        <item name="android:fontFamily">@font/metropolis_semibold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/metropolis_semibold</item>
        <item name="android:fontFamily">@font/metropolis_semibold</item>
    </style>


    <!-- set the rounded drawable as background to your bottom sheet -->

    <style name="buttonTheme" parent="Theme.MaterialComponents.Light">
        <item name="theme">@style/buttonTheme</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:background">@drawable/btn_custom</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>


    <!--    set TabLayout-->
    <style name="CustomTabText" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>